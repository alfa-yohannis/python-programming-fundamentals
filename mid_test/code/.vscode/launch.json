  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Pytest (workspace)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v", "tests"],              // or "test"
      "console": "integratedTerminal",
      "justMyCode": false,                  // allows breakpoints everywhere
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    },
    {
      "name": "Debug Single Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v", "${file}"],            // run the open test file
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    },
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}"
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}